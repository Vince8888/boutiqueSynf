{% extends 'base.html.twig' %}

{% block title %}Création d'article!{% endblock %}

{% block body %}

<div class="container">
    <div class="row justify-content-left mt-3 mb-2">
        <h1>Création d'un article</h1>
    </div>
    <div class="row justify-content-left">
    {{ form_start(form)}}
        <div class="form-group">
            <label for="exampleInputEmail1">Nom de l'article</label>
             {{ form_row(form.name) }}
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Votre image</label>
            {{ form_row(form.image,{'label': " "}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.description,{'attr':{'class':"form-control"}}) }}
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Prix en €</label>
           {{ form_row(form.price) }}
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Catégorie</label>
           {{ form_row(form.category,{'label': " "}) }}
        </div>
        {{ form_row(form.envoyer,{'attr':{'class':"btn btn-md btn-green lienCate"}}) }}
    {{ form_end(form) }}
    </div>
</div>
{% endblock %}
